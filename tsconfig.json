{
    "compilerOptions": {
      "target": "es2016" ,
      "module": "commonjs",
      "paths": {
        "*": ["./node_modules/*", "./src/types/*"]
      },                                     
      "outDir": "dist", 
      "esModuleInterop": true ,
      "forceConsistentCasingInFileNames": true ,
      "strict": true,
      "skipLibCheck": true,
    },
    "include": [
      "src/**/*.ts",
    ],
    "exclude": [
      "node_modules",
      "<node_internals>/**",
      "bin/**"
    ]
  }